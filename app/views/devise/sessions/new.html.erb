<div class="column-4 offset-7">  

  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true, class: 'brr-5' %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'brr-5' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions m-b-2">
      <%= f.submit "Log in", class: "btn m-1-b" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>


