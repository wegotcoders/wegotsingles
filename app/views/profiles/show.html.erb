<div class="wrapper search-box">
	<h1>Find your match!</h1>
	<h2>Search by gender:</h2>
	<form action="/profiles/search" method="get">
		<%= radio_button_tag(:gender, "male") %>
		<%= label_tag(:gender_male, "Male", class: 'm-2') %>
		<%= radio_button_tag(:gender, "female") %>
		<%= label_tag(:gender_female, "Female", class: 'm-2') %>
		<%= radio_button_tag(:gender, "other") %>
		<%= label_tag(:gender_other, "Other", class: 'm-2') %>
		<%= submit_tag("Search", {class: 'btn m-1'}) %>
	</form>
</div>